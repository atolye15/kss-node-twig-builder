{
  "name": "@atolye15/kss-node-twig-builder",
  "version": "1.2.0",
  "description": "The Twig.js builder for kss-node that used by Atölye15.",
  "main": "builder.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atolye15/kss-node-twig-builder.git"
  },
  "author": "Atölye15",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/atolye15/kss-node-twig-builder/issues"
  },
  "homepage": "https://github.com/atolye15/kss-node-twig-builder#readme",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepack": "npm run build",
    "lint": "npm-run-all --parallel lint:js lint:css",
    "lint:js": "eslint \"src/**/*.js\"",
    "lint:css": "stylelint --syntax scss \"src/**/*.scss\"",
    "format": "npm-run-all --parallel format:js format:css",
    "format:css": "yarn lint:css --fix",
    "format:js": "prettier --write \"src/js/**/*.js\"",
    "compile:js": "rollup --config",
    "compile:css": "node-sass src/main.scss kss-assets/kss.css --output-style expanded --precision 6 --source-map-contents true",
    "optimize:css": "postcss kss-assets/kss.css -d kss-assets/",
    "start": "npm-run-all --parallel start:css start:js",
    "start:js": "nodemon --watch src/ --ext js --exec \"yarn compile:js --sourcemap\"",
    "start:css": "nodemon --watch src/ --ext scss --exec \"yarn compile:css --source-map true && yarn optimize:css --map\"",
    "build:css": "npm-run-all compile:css optimize:css",
    "build:js": "yarn compile:js",
    "build": "NODE_ENV=production npm-run-all build:css build:js"
  },
  "devDependencies": {
    "@atolye15/eslint-config-base": "^1.1.0",
    "@atolye15/stylelint-config": "^1.3.0",
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/register": "^7.8.3",
    "autoprefixer": "^9.7.4",
    "babel-eslint": "^10.0.3",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "highlight.js": "^9.12.0",
    "node-sass": "^4.13.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "prettier": "^1.19.1",
    "rollup": "^1.29.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.2.0",
    "stylelint": "^13.0.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-prettier": "^1.1.2"
  }
}
